<?xml version="1.0" encoding="UTF-8"?>
<phpunit colors="true">
	<testsuites>
		<testsuite name="Basic">
			<directory>tests/SDP/</directory>
		</testsuite>
		<testsuite name="Entities">
			<directory>tests/Asset/</directory>
			<directory>tests/AssetRelation/</directory>
			<directory>tests/Link/</directory>
			<directory>tests/Category/</directory>
			<directory>tests/Tag/</directory>
			<directory>tests/Profile/</directory>
		</testsuite>
		<testsuite name="Driver">
			<directory>tests/Driver/</directory>
		</testsuite>
		
	</testsuites>

	<filter>
		<whitelist addUncoveredFilesFromWhitelist="true">
			<directory suffix=".php">src</directory>
		</whitelist>
	</filter>
	<logging>
		<log type="coverage-clover" target="build/logs/clover.xml" />
	</logging>
</phpunit>